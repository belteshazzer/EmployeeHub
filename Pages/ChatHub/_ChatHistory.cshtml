@using EmployeeHub.Models.Dtos
@model List<ChatHistory>

@foreach (var message in Model)
{
    <div class="message @((message.IsSent ?? false) ? "message-sent" : "message-received")">
        <div class="message-content">@message.Message</div>
        <div class="message-info">
            @message.Timestamp.ToString("hh:mm tt")
            @if (message.IsSent ?? false)
            {
                <span class="message-status">
                    @(message.IsRead ? "✓✓" : "✓")
                </span>
            }
        </div>
    </div>
}